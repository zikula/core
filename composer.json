{
    "name": "zikula/core",
    "homepage": "https://ziku.la/",
    "license": "LGPL-3.0-or-later",
    "description": "Zikula Application Framework",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "Zikula\\": ["build", "src/system", "src/themes", "src/Zikula"]
        },
        "files": ["src/Kernel.php"]
    },
    "authors": [
        {
            "name": "Zikula Team",
            "homepage": "https://github.com/zikula/core/graphs/contributors"
        }
    ],
    "require": {
        "php": "^7.2.5",
        "wikimedia/composer-merge-plugin": "1.*"
    },
    "require-dev": {
        "symfony/phpunit-bridge": "5.*"
    },
    "scripts": {
        "zikula-scripts": [
            "Zikula\\Composer\\CopyRequirementsFile::copy",
            "composer dump-autoload",
            "bin/console cache:clear --env prod",
            "bin/console cache:clear",
            "bin/console assets:install --relative public",
            "Zikula\\Composer\\ManuallyInstallAssets::install",
            "Zikula\\Composer\\RequireJsConfigGenerator::regenerateRequireJs"
        ],
        "post-install-cmd": [
            "@zikula-scripts"
        ],
        "post-update-cmd": [
            "@zikula-scripts"
        ]
    },
    "config": {
        "bin-dir": "bin",
        "component-dir": "public",
        "public-dir": "public",
        "vendor-dir": "vendor"
    },
    "extra": {
        "symfony-app-dir": "app",
        "symfony-web-dir": "public",
        "symfony-var-dir": "var",
        "symfony-bin-dir": "bin",
        "symfony-tests-dir": "tests",
        "symfony-assets-install": "relative",
        "installer-paths": {
            "src/extensions/{$vendor}/{$name}": ["type:zikula-module", "type:zikula-theme"]
        },
        "merge-plugin": {
            "require": [
                "src/Zikula/*/composer.json",
                "src/system/*/composer.json"
            ],
            "include": [
                "src/modules/*/composer.json",
                "src/modules/*/*/composer.json",
                "src/themes/*/composer.json",
                "src/themes/*/*/composer.json"
            ],
            "recurse": false,
            "replace": false,
            "merge-dev": true,
            "merge-extra": false,
            "merge-extra-deep": false
        }
    }
}
