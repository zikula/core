{% extends '@ZikulaCoreInstaller/theme.html.twig' %}
{% form_theme form 'bootstrap_3_horizontal_layout.html.twig' %}

{% block title "Zikula Core Installer :: Login" %}

{% block content %}
<div>
    <fieldset>
        <legend>{{  __("Please Login with Admin credentials") }}</legend>

        {{ form_start(form) }}
        {{ form_errors(form) }}

        <div class="form-group">
            {{ form_label(form.username) }}
            <div class="col-md-7">
                {{ form_widget(form.username) }}
                {{ form_errors(form.username) }}
            </div>
        </div>
        <div class="form-group">
            {{ form_label(form.password) }}
            <div class="col-md-7">
                {{ form_widget(form.password) }}
                {{ form_errors(form.password) }}
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-5 col-md-7">
                <input type="submit" value="{{ __('Next') }}" class="btn btn-success" />
            </div>
        </div>
        {{ form_end(form) }}
    </fieldset>
</div>
<script>
    $(document).ready(function() {
        $('form:first *:input:text:first').focus();
    });
</script>
{% endblock %}