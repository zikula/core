{% extends '@ZikulaCoreInstaller/theme.html.twig' %}
{% form_theme form 'bootstrap_3_horizontal_layout.html.twig' %}

{% block title "Zikula Core Installer :: Create administrator's account" %}

{% block content %}
<div>
    <fieldset>
        <legend>{{  __("Create administrator's account") }}</legend>

        {{ form_start(form) }}
        {{ form_errors(form) }}

        <div class="form-group">
            {{ form_label(form.username) }}
            <div class="col-sm-9">
                {{ form_errors(form.username) }}
                {{ form_widget(form.username) }}
            </div>
        </div>
        <div class="form-group">
            {{ form_label(form.password.first) }}
            <div class="col-sm-9">
                {{ form_errors(form.password.first) }}
                {{ form_widget(form.password.first) }}
            </div>
        </div>
        <div class="form-group">
            {{ form_label(form.password.second) }}
            <div class="col-sm-9">
                {{ form_errors(form.password.second) }}
                {{ form_widget(form.password.second) }}
            </div>
        </div>
        <div class="form-group">
            {{ form_label(form.email) }}
            <div class="col-sm-9">
                {{ form_errors(form.email) }}
                {{ form_widget(form.email) }}
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-3 col-sm-9">
                <input type="submit" value="{{ __('Next') }}" class="btn btn-success" />
            </div>
        </div>
        {{ form_end(form) }}
    </fieldset>
</div>
<script>
    $(document).ready(function() {
        $('form:first *:input:text:first').focus();
    });
</script>
{% endblock %}
