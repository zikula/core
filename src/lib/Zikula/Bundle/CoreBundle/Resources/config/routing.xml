<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="home" path="/">
        <default key="_controller">zikula_core.controller.front_controller:homeAction</default>
        <condition>request.query.get('module') == ''</condition>
    </route>
    <!-- legacy route is deprecated -->
    <route id="legacy" path="/">
        <default key="_controller">zikula_core.controller.front_controller:legacyAction</default>
        <condition>request.query.get('module') != '' and request.query.get('type') != '' and request.query.get('func') != ''</condition>
    </route>
</routes>
