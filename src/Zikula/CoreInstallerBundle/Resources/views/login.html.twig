{% extends '@ZikulaCoreInstaller/theme.html.twig' %}
{% block title "Zikula Core Installer :: Login" %}

{% block content %}
<div class="card" id="loginCredentials">
    <div class="card-header">
        <strong>{% trans %}Please enter your Admin login credentials{% endtrans %}</strong>
    </div>
    <div class="card-body">
        {{ form_start(form) }}
        {{ form_errors(form) }}

        <div class="form-group row">
            {{ form_label(form.username) }}
            <div class="col-md-9">
                {{ form_errors(form.username) }}
                {{ form_widget(form.username) }}
            </div>
        </div>
        <div class="form-group row">
            {{ form_label(form.password) }}
            <div class="col-md-9">
                {{ form_errors(form.password) }}
                {{ form_widget(form.password) }}
            </div>
        </div>
        <div class="form-group row">
            <div class="col-md-9 offset-md-3">
                <input type="submit" value="{% trans %}Next{% endtrans %}" class="btn btn-success" />
            </div>
        </div>
        {{ form_end(form) }}
    </div>
</div>
{% endblock %}
