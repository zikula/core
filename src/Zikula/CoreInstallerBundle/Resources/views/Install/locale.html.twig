{% extends '@ZikulaCoreInstaller/theme.html.twig' %}
{% block title 'Zikula Core Installer :: Select Default Language' %}

{% block content %}
    {{ form_start(form) }}
    {{ form_errors(form) }}

    <div class="form-group row">
        {{ form_label(form.locale) }}
        <div class="col-md-9">
            {{ form_errors(form.locale) }}
            {{ form_widget(form.locale) }}
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-9 offset-md-3">
            <input type="submit" value="{% trans %}Next{% endtrans %}" class="btn btn-success" />
        </div>
    </div>
    {{ form_end(form) }}
{% endblock %}
