{% extends '@ZikulaCoreInstaller/theme.html.twig' %}
{% form_theme form 'bootstrap_3_horizontal_layout.html.twig' %}

{% block title "Zikula Core Installer :: Create administrator's account" %}

{% block content %}
<div class="card">
    <div class="card-header">
        <strong>{% trans %}Create administrator's account{% endtrans %}</strong>
    </div>
    <div class="card-body">

        {{ form_start(form) }}
        {{ form_errors(form) }}

        <div class="form-group row">
            {{ form_label(form.username) }}
            <div class="col-md-9">
                {{ form_errors(form.username) }}
                {{ form_widget(form.username) }}
            </div>
        </div>
        <div class="form-group row">
            {{ form_label(form.password.first) }}
            <div class="col-md-9">
                {{ form_errors(form.password.first) }}
                {{ form_widget(form.password.first) }}
            </div>
        </div>
        <div class="form-group row">
            {{ form_label(form.password.second) }}
            <div class="col-md-9">
                {{ form_errors(form.password.second) }}
                {{ form_widget(form.password.second) }}
            </div>
        </div>
        <div class="form-group row">
            {{ form_label(form.email) }}
            <div class="col-md-9">
                {{ form_errors(form.email) }}
                {{ form_widget(form.email) }}
            </div>
        </div>
        <div class="form-group row">
            <div class="col-md-9 offset-md-3">
                <input type="submit" value="{% trans %}Next{% endtrans %}" class="btn btn-success" />
            </div>
        </div>
        {{ form_end(form) }}
    </div>
</div>
<script>
    $(document).ready(function() {
        $('form:first *:input:text:first').focus();
    });
</script>
{% endblock %}
