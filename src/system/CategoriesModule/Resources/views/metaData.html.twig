<fieldset>
    {% if collapse is not defined or collapse != false %}
        <legend><a href="#category-metadata" data-toggle="collapse">{{ __('Meta data') }} <i class="fa fa-expand"></i></a></legend>
        <div class="collapse" id="category-metadata">
    {% else %}
        <legend>{{ __('Meta data') }}</legend>
    {% endif %}
        <div class="form-group">
            <label class="col-sm-3 control-label" for="category_meta_id">{{ __('Internal ID') }}</label>
            <div class="col-sm-9">
                <div class="form-control-static">
                    <span id="category_meta_id">{{ category.id }}</span>
                </div>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-3 control-label" for="category_path">{{ __('Path') }}</label>
            <div class="col-sm-9">
                <div class="form-control-static">
                    <span id="category_path">{{ category.path }}</span>
                </div>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-3 control-label" for="category_ipath">{{ __('I-path') }}</label>
            <div class="col-sm-9">
                <div class="form-control-static">
                    <span id="category_ipath">{{ category.ipath }}</span>
                </div>
            </div>
        </div>
    {% if collapse is not defined or collapse != false %}
        </div>
    {% endif %}
</fieldset>
