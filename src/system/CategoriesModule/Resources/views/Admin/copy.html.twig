{% form_theme form with [
    'ZikulaFormExtensionBundle:Form:bootstrap_3_zikula_admin_layout.html.twig',
    'ZikulaFormExtensionBundle:Form:form_div_layout.html.twig'
] %}
{{ adminHeader() }}
<div class="container-fluid">
    <div class="row">
        <h3>
            <span class="fa fa-files-o"></span> {{ __('Copy category') }}
            {{ pageSetVar('title', __('Copy category')) }}
        </h3>

        {{ form_start(form) }}
        {{ form_errors(form) }}
        <fieldset>
            <legend>{{ __('Category') }}</legend>
            <div class="form-group">
                <label class="col-sm-3 control-label">{{ __('Name') }}</label>
                <div class="col-sm-9">
                    <div class="form-control-static">
                        <span>{{ category.name }}</span>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-3 control-label">{{ __('Path') }}</label>
                <div class="col-sm-9">
                    <div class="form-control-static">
                        <span>{{ category.path }}</span>
                    </div>
                </div>
            </div>
            {{ form_row(form.parent) }}
        </fieldset>
        <div class="form-group">
            <div class="col-sm-offset-3 col-sm-9">
                {{ form_widget(form.copy) }}
                {{ form_widget(form.cancel) }}
            </div>
        </div>
        {{ form_end(form) }}
    </div>
</div>
{{ adminFooter() }}
