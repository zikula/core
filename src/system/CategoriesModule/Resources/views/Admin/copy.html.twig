{{ adminHeader() }}
<h3>
    <span class="fa fa-files-o"></span>
    {{ __('Copy category') }}
</h3>

<form class="form-horizontal" role="form" action="{{ path('zikulacategoriesmodule_adminform_copy') }}" method="post" enctype="application/x-www-form-urlencoded">
    <div>
        <input type="hidden" name="csrftoken" value="{{ csrfToken }}" />
        <input type="hidden" name="cid" value="{{ category.id }}" />
        <fieldset>
            <legend>{{ __('Category') }}</legend>
            <div class="form-group">
                <label class="col-sm-3 control-label">{{ __('Name') }}</label>
                <div class="col-sm-9">
                    <div class="form-control-static">
                        <span>{{ category.name }}</span>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-3 control-label">{{ __('Path') }}</label>
                <div class="col-sm-9">
                    <div class="form-control-static">
                        <span>{{ category.path }}</span>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-3 control-label" for="subcat_copy">{{ __('Copy this category and all sub-categories of this category') }}</label>
                <div class="col-sm-9">
                    {{ categorySelector }}
                </div>
            </div>
        </fieldset>
        <div class="form-group">
            <div class="col-sm-offset-3 col-sm-9">
                <button class="btn btn-success" title="{{ __('Copy') }}"><i class="fa fa-files-o"></i> {{ __('Copy') }}</button>
                <a class="btn btn-default" href="{{ path('zikulacategoriesmodule_admin_view') }}" title="{{ __('Cancel') }}"><i class="fa fa-times"></i> {{ __('Cancel') }}</a>
            </div>
        </div>
    </div>
</form>
{{ adminFooter() }}
