{{ form_start(form) }}
{{ form_errors(form) }}
<fieldset>
    <legend>{% trans %}Search{% endtrans %}</legend>
    {{ form_widget(form.q) }}
    <div class="d-none">
        {{ form_row(form.searchType) }}
        {{ form_row(form.searchOrder) }}
        {{ form_row(form.modules) }}
    </div>
    {% if not properties.displaySearchBtn %}<div class="d-none">{% endif %}
        {{ form_row(form.search) }}
    {% if not properties.displaySearchBtn %}</div>{% endif %}
</fieldset>
{{ form_end(form) }}
