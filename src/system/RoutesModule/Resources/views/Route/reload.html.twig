{# purpose of this template: show output of reload action in route area #}
{% extends routeArea == 'admin' ? 'ZikulaRoutesModule::adminBase.html.twig' : 'ZikulaRoutesModule::base.html.twig' %}
{% block title %}
    {{ __('Reload') }}
{% endblock %}
{% block adminPageIcon %}square{% endblock %}
{% block content %}
    <div class="zikularoutesmodule-reload zikularoutesmodule-reload">
        <p>Please override this template by moving it from <em>/system/RoutesModule/Resources/views/Route/reload.html.twig</em> to either <em>/themes/YourTheme/Resources/ZikulaRoutesModule/views/Route/reload.html.twig</em> or <em>/app/Resources/ZikulaRoutesModule/views/Route/reload.html.twig</em>.</p>
    </div>
{% endblock %}
