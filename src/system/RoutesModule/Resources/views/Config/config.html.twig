{# purpose of this template: module configuration page #}
{% extends 'ZikulaRoutesModule::adminBase.html.twig' %}
{% block title __('Settings') %}
{% block admin_page_icon 'wrench' %}
{% block content %}
    <div class="zikularoutesmodule-config">
        {% form_theme form with [
            '@ZikulaRoutesModule/Form/bootstrap_3.html.twig',
            'ZikulaFormExtensionBundle:Form:form_div_layout.html.twig'
        ] %}
        {{ form_start(form) }}
        {{ form_errors(form) }}
        {% set tabTitle = __('List views') %}
        <fieldset>
            <legend>{{ tabTitle }}</legend>
        
            <p class="alert alert-info">{{ __('Here you can configure parameters for list views.')|nl2br }}</p>
        
            {{ form_row(form.routeEntriesPerPage) }}
        </fieldset>
        <div role="tabpanel" class="tab-pane fade" id="tabWorkflows" aria-labelledby="workflowsTab">
            {% set tabTitle = __('Workflows') %}
            <fieldset>
                <legend>{{ tabTitle }}</legend>
        
                <p class="alert alert-info">{{ __('Here you can inspect and amend the existing workflows.') }}</p>
        
                <h4>{{ __('Routes') }}</h4>
                <p><a href="{{ path('zikula_workflow_editor_index', { 'workflow': 'zikularoutesmodule_none' }) }}" title="{{ __('Edit workflow for routes') }}" target="_blank"><i class="fa fa-cubes"></i> {{ __('Edit routes workflow') }}</a>
            </fieldset>
        </div>

        <div class="form-group">
            <div class="col-sm-offset-3 col-sm-9">
                {{ form_widget(form.save) }}
                {{ form_widget(form.cancel) }}
            </div>
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}
