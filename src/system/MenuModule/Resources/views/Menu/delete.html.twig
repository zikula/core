{% form_theme form with [
    '@ZikulaFormExtension/Form/bootstrap_4_zikula_admin_layout.html.twig',
    '@ZikulaFormExtension/Form/form_div_layout.html.twig'
] %}
{{ adminHeader() }}
{{ pageSetVar('title', __('Delete Root')) }}
<h3>
    <span class="fa fa-trash-alt"> {% trans %}Delete Root{% endtrans %}</span>
</h3>
<div class="alert alert-danger">{% trans with {'%menu%': form.vars.value.entity.title} %}Are you sure you want to delete this menu (%menu%) AND ALL ITS CHILDREN?{% endtrans %}</div>
{{ form_start(form) }}
{{ form_errors(form) }}
<div class="form-group row">
    <div class="col-md-9 offset-md-3">
        {{ form_widget(form.delete) }}
        {{ form_widget(form.cancel) }}
    </div>
</div>
{{ form_end(form) }}
{{ adminFooter() }}
