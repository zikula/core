{{ pageSetVar('title', 'Account verification'|trans) }}
<h2>{{ 'Account verification'|trans }}</h2>
{{ showflashes() }}

{{ form_start(form) }}
{{ form_errors(form) }}
<fieldset>
    <legend>{% trans %}Verification code{% endtrans %}</legend>
    {{ form_row(form.uname) }}
    {{ form_row(form.verifycode) }}
</fieldset>
{% if form.children.pass is defined %}
    <fieldset>
        <legend>{% trans %}Create a password{% endtrans %}</legend>
        {{ include('@ZikulaZAuth/Authentication/PasswordGenerator.html.twig') }}
        {{ form_row(form.pass) }}
    </fieldset>
{% endif %}
<div class="form-group row">
    <div class="col-md-9 offset-md-3">
        {{ form_widget(form.submit) }}
    </div>
</div>
{{ form_end(form) }}
{% if usePasswordStrengthMeter and form.pass|default %}
    {{ pageAddAsset('javascript', zasset('@ZikulaZAuthBundle:js/pwstrength-bootstrap.min.js')) }}
    {{ pageAddAsset('javascript', zasset('@ZikulaZAuthBundle:js/Zikula.ZAuth.PWStrength.Init.js')) }}
{% endif %}
