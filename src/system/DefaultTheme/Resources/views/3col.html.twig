{% extends '@ZikulaDefaultTheme/base.html.twig' %}

{% block themebody %}
    <div class="container 3col">
        <div class="row">
            <div id="themeLeftColumn" class="col-md-4">
                {{ showblockposition('left') }}
            </div>
            <div id="themeMainContent" class="col-md-4">
                {{ admin|default ? adminHeader() : '' }}
                {{ showflashes() }}
                {{ maincontent|raw }}
                {{ admin|default ? adminFooter() : '' }}
            </div>
            <div id="themeRightColumn" class="col-md-4">
                {{ showblockposition('right') }}
            </div>
        </div>
    </div>
{% endblock themebody %}
