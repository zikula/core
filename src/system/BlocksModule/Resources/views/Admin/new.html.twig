{{ pageAddAsset('javascript', zasset('@ZikulaBlocksModule:js/Zikula.Blocks.Admin.New.js')) }}
{% form_theme form with [
    '@ZikulaFormExtension/Form/bootstrap_4_zikula_admin_layout.html.twig',
    '@ZikulaFormExtension/Form/form_div_layout.html.twig'
] %}
{{ adminHeader() }}
<h3>
    <span class="fas fa-plus-square"></span>
    {% trans %}Create block{% endtrans %}
    {{ pageSetVar('title', 'Create block'|trans) }}
</h3>
{{ showflashes() }}
{{ form_start(form) }}
{{ form_errors(form) }}
<fieldset>
    <legend>{% trans %}Properties{% endtrans %}</legend>
    <div class="alert alert-info">{% trans %}Select a block type.{% endtrans %}</div>
    {{ form_row(form.bkey) }}
</fieldset>
<div class="form-group row">
    <div class="col-md-9 offset-md-3">
        {{ form_widget(form.choose) }}
    </div>
</div>
{{ form_end(form) }}
{{ adminFooter() }}
