{% form_theme form with [
    '@ZikulaFormExtension/Form/bootstrap_4_zikula_admin_layout.html.twig',
    '@ZikulaFormExtension/Form/form_div_layout.html.twig'
] %}
{{ adminHeader() }}
<h3>
    <span class="fa fa-edit"></span>
    {% if form.vars.value.pid %}
        {{ __('Modify block position') }}
        {{ pageSetVar('title', __('Modify block position')) }}
    {% else %}
        {{ __('Create block position') }}
        {{ pageSetVar('title', __('Create block position')) }}
    {% endif %}
</h3>
<p class="alert alert-info">
    {% if form.vars.value.pid is empty %}
        {{ __('After creating this block position, blocks can be assigned to it and the order they are to be displayed can be adjusted.') }}<br />
    {% endif %}
    {{ __('The theme in use must implement the block position or the assigned blocks will never be displayed.') }}
</p>
{{ showflashes() }}
{{ form_start(form) }}
{{ form_errors(form) }}
{{ form_row(form.name) }}
{{ form_row(form.description) }}
<div class="form-group row">
    <div class="col-md-9 offset-md-3">
        {{ form_widget(form.save) }}
        {{ form_widget(form.cancel) }}
    </div>
</div>
{{ form_end(form) }}
{{ adminFooter() }}
