{% if multilingual %}
    {{ pageAddAsset('javascript', zasset('@ZikulaThemeBundle:js/LocaleSwitcher.js')) }}
    {% form_theme form with [
        'bootstrap_4_horizontal_layout.html.twig',
    ] only %}
    <p>{% trans %}Select a locale:{% endtrans %}</p>
    {{ form_start(form) }}
    {{ form_widget(form.locale) }}
    {{ form_end(form) }}
{% else %}
    <p class="alert alert-warning">{% trans %}Multilingual features are deactivated.{% endtrans %}</p>
{% endif %}
