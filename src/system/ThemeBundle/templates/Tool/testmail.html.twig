{% extends '@EasyAdmin/page/content.html.twig' %}

{% block page_title 'Test mailer settings'|trans %}
{% block main %}
    {{ form_start(form) }}
    {{ form_errors(form) }}

    <fieldset>
        <legend>{% trans %}Settings test{% endtrans %}</legend>
        {{ form_row(form.fromName) }}
        {{ form_row(form.fromAddress) }}
        {{ form_row(form.toName) }}
        {{ form_row(form.toAddress) }}
        {{ form_row(form.subject) }}
        {{ form_row(form.messageType) }}
        <div id="zikulathemebundle_mailtest_bodyHtml_row">
            {{ form_row(form.bodyHtml) }}
        </div>
        <div id="zikulathemebundle_mailtest_bodyText_row">
            {{ form_row(form.bodyText) }}
        </div>
    </fieldset>

    <div class="form-group row">
        <div class="col-md-9 offset-md-3">
            {{ form_widget(form.test) }}
            {{ form_widget(form.cancel) }}
        </div>
    </div>
    {{ form_end(form) }}
{% endblock %}
{% block body_javascript %}
    {{ parent() }}
    <script src="{{ asset('bundles/zikulatheme/js/ZikulaThemeBundle.TestMail.js') }}"></script>
{% endblock %}
