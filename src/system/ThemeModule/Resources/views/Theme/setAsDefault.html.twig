{% form_theme form with [
    '@ZikulaFormExtension/Form/bootstrap_4_zikula_admin_layout.html.twig',
    '@ZikulaFormExtension/Form/form_div_layout.html.twig'
] %}
{{ adminHeader() }}
<h3>
    <span class="fas fa-check"></span>
    {% trans %}Theme confirmation prompt{% endtrans %}
    {{ pageSetVar('title', 'Theme confirmation prompt'|trans) }}
</h3>

<p class="alert alert-danger">
    {% trans with {'%sub%': '<strong>' ~ themeName ~ '</strong>'|raw} %}Do you really want to set %sub% as the active theme for all site users?{% endtrans %}
</p>
{{ form_start(form) }}
{{ form_errors(form) }}
<div class="form-group row">
    <div class="col-md-9 offset-md-3">
        {{ form_widget(form.accept) }}
        {{ form_widget(form.cancel) }}
    </div>
</div>
{{ form_end(form) }}
{{ adminFooter() }}
