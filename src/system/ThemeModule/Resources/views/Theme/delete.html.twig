{% form_theme form with [
    '@ZikulaFormExtension/Form/bootstrap_4_zikula_admin_layout.html.twig',
    '@ZikulaFormExtension/Form/form_div_layout.html.twig'
] %}
{{ adminHeader() }}
<h3>
    <span class="fa fa-trash-alt"></span>
    {{ __f('Remove theme %sub%', {"%sub%": themeName}) }}
    {{ pageSetVar('title', __('Remove theme')) }}
</h3>

<p class="alert alert-danger">{{ __f('Do you really want to remove the %name% theme?', {'%name%': themeName}) }}</p>
{{ form_start(form) }}
{{ form_errors(form) }}
{{ form_row(form.deletefiles) }}
<div class="form-group row">
    <div class="col-md-9 offset-md-3">
        {{ form_widget(form.delete) }}
        {{ form_widget(form.cancel) }}
    </div>
</div>
{{ form_end(form) }}
{{ adminFooter() }}
