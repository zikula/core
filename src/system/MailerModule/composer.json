{
    "name": "zikula/mailer-module",
    "version": "1.5.0",
    "description": "Mailer module, provides mail API and mail setting administration.",
    "type": "zikula-module",
    "license": "LGPL-3.0+",
    "authors": [
        {
            "name": "Zikula",
            "homepage": "http://zikula.org/"
        }
    ],
    "autoload": {
        "psr-0": { "Zikula\\MailerModule\\": "" }
    },
    "require": {
        "php": ">5.4.0"
    },
    "extra": {
        "zikula": {
            "url": "mailer",
            "class": "Zikula\\MailerModule\\ZikulaMailerModule",
            "displayname": "Mailer Module",
            "url": "mailer",
            "capabilities": {
                "admin": {"route": "zikulamultisitesmodule_admin_config"},
                "hook_subscriber": {"class": "Zikula\\MailerModule\\Container\\HookContainer"}
            },
            "securityschema": {
                "ZikulaMailerModule::": "::"
            }
        }
    }
}
