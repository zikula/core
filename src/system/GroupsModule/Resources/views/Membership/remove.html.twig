{% form_theme form with [
    '@ZikulaFormExtension/Form/bootstrap_4_zikula_admin_layout.html.twig',
    '@ZikulaFormExtension/Form/form_div_layout.html.twig'
] %}
{{ adminHeader() }}
<h3>
    <span class="fa fa-user-times"></span>
    {% trans %}Remove user from group{% endtrans %}
    {{ pageSetVar('title', __('Remove user from group')) }}
</h3>

{{ form_start(form) }}
{{ form_errors(form) }}
<fieldset>
    <legend>{% trans %}Confirmation prompt{% endtrans %}</legend>
    <p class="alert alert-warning">{% trans with { '%username': uname, '%groupname': group.name } %}Do you really want to remove user "%username" from group "%groupname"?{% endtrans %}</p>

    {{ form_row(form.gid) }}
    {{ form_row(form.uid) }}
</fieldset>
<div class="form-group row">
    <div class="col-md-9 offset-md-3">
        {{ form_widget(form.remove) }}
        {{ form_widget(form.cancel) }}
    </div>
</div>
{{ form_end(form) }}
{{ adminFooter() }}
