{{ pageAddAsset('stylesheet', asset('mmenu/css/mmenu.css'), 100) }}
{{ pageAddAsset('javascript', asset('mmenu/js/mmenu.js'), 100) }}
{{ pageAddAsset('javascript', zasset('@ZikulaAdminModule:js/ZikulaAdminModule.Modules.Panel.MMenuConfig.js'), 101) }}
{% import '@ZikulaAdminModule/AdminInterface/mmenuHelper.html.twig' as helper %}
<a href="#zikula-admin-hiddenpanel-menu"><i class="fas fa-bars" title="{% trans %}Show administration panel{% endtrans %}"></i></a>
<nav id="zikula-admin-hiddenpanel-menu" class="d-none">
    <div class="text-left">
        <h2 class="pl-4 pt-1"><img src="{{ asset('bundles/core/images/logo.gif') }}" style="height: 28px" alt="{% trans %}Administration{% endtrans %}"> {% trans %}Administration{% endtrans %}</h2>
        <ul>
            {% for module in adminMenu %}
                <li{% if caller._zkModule == module.modname %} class="selected"{% endif %}>
                    <a href="{{ module.menutexturl }}" title="{{ module.menutext|e('html_attr') }}">
                        <i class="{{ module.icon|default('fas fa-layer-group') }} fa-fw fa-lg align-middle text-info"></i> {{ module.menutext|raw }}
                    </a>
                    {% if module.links|length > 0 %}
                        <ul class="text-left">
                            {{ helper.draw(module.links, caller, module) }}
                        </ul>
                    {% endif %}
                </li>
            {% endfor %}
        </ul>
    </div>
</nav>
