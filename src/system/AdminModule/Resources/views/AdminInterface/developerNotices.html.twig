{% if hasPermission('ZikulaAdminModule::', '::', 'ACCESS_ADMIN') %}
    {% set themeUrl = path('zikulathememodule_admin_modifyconfig') %}
    {% if developer.mode != 'prod' %}
        <div id="developernotices" class="alert alert-info">
            <div class="row">
                <div class="col-md-12">
                    <i class="close" data-dismiss="alert">&times;</i>
                    <a class="text-primary" data-toggle="collapse" href="#developernotices_full" aria-expanded="false" aria-controls="developernotices_full">
                        <strong><i class="fa fa-caret-right fa-fw"></i> {{ __('Developer notices (development mode on)') }}</strong>
                    </a>
                </div>
                <div class="collapse" id="developernotices_full">
                    <div class="legacy col-md-6">
                        <h4>{{ __('Smarty engine settings') }}</h4>
                        {% if developer.legacy.render is defined %}
                            <div class="col-md-6">
                                <a href="{{ themeUrl }}"><strong>{{ __('Enabled Template settings') }}:</strong></a>
                                {% for item in developer.legacy.render %}
                                    <p>
                                        <i class="fa {% if item.state %}fa-check-circle text-success{% else %}fa-times text-danger{% endif %}"></i> {{ item.title }}
                                    </p>
                                {% endfor %}
                            </div>
                        {% endif %}
                        {% if developer.legacy.theme is defined %}
                            <div class="col-md-6">
                                <a href="{{ themeUrl }}"><strong>{{ __('Enabled Theme settings') }}: </strong></a>
                                {% for item in developer.legacy.theme %}
                                    <p>
                                        <i class="fa {% if item.state %}fa-check-circle text-success{% else %}fa-times text-danger{% endif %}"></i> {{ item.title }}
                                    </p>
                                {% endfor %}
                            </div>
                        {% endif %}
                        <p>
                            {% if developer.legacy.cssjscombine is defined and developer.legacy.cssjscombine is defined %}
                                <i class="fa fa-check-circle text-success"></i> {{ __('CSS/JS combination is enabled') }}
                            {% else %}
                                <i class="fa fa-exclamation-circle text-warning"></i> {{ __('CSS/JS combination is disabled') }}
                            {% endif %}
                        </p>
                        <div class="col-md-12">
                            <a href="{{ themeUrl }}">
                                <strong><i class="fa fa-refresh"></i> {{ __('Clear all cache and compile directories') }}</strong>
                            </a>
                        </div>
                    </div>
                    <div class="legacy col-md-6">
                        <h4>{{ __('Dev mode status') }}</h4>
                        <ul>
                            <li>{{ __('Mode') }}: {{ developer.mode }}</li>
                            <li>{{ __('Debug enabled') }}: {{ developer.debug }}</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    {% endif %}
{% endif %}
