<h3>
    {% if form.vars.value.cid %}
        <span class="fas fa-pencil-alt"></span>
        {% trans %}Edit module category{% endtrans %}
        {{ pageSetVar('title', 'Edit module category'|trans) }}
    {% else %}
        <span class="fas fa-file-plus"></span>
        {% trans %}Create new module category{% endtrans %}
        {{ pageSetVar('title', 'Create new module category'|trans) }}
    {% endif %}
</h3>

{{ form_start(form) }}
{{ form_errors(form) }}
<fieldset>
    <legend>{% trans %}Module category{% endtrans %}</legend>
    {{ form_row(form.cid) }}
    {{ form_row(form.name) }}
    {{ form_row(form.description) }}
    {{ form_row(form.icon) }}
</fieldset>
<div class="form-group row">
    <div class="col-md-9 offset-md-3">
        {{ form_widget(form.save) }}
        {{ form_widget(form.cancel) }}
    </div>
</div>
{{ form_end(form) }}
