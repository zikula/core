<fieldset>
    <legend>{{ __('Account Information') }}</legend>
    <div class="form-group">
        <label class="col-sm-3 control-label">{{ __('User name:') }}</label>
        <div class="col-sm-9">
            <div class="form-control-static">
                {{ user.uname }}
            </div>
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-3 control-label">{{ __('E-mail address:') }}</label>
        <div class="col-sm-9">
            <div class="form-control-static">
                {% if user.email|default %}
                    <a href="mailto:{{ user.email|url_encode }}">{{ user.email }}</a>
                {% else %}
                    ---
                {% endif %}
            </div>
        </div>
    </div>
</fieldset>

{% if user.pass is empty %}
<fieldset>
    <legend>{{ __('Log-in information') }}</legend>
    <div class="alert alert-info">
        {{ __('Because a password is not set for this registration, the e-mail verification process cannot be skipped. It must be completed so that the user can establish a password before the user account is created.') }}
    </div>
</fieldset>
{% endif %}

{% set eventData = dispatchEvent(constant('Zikula\\UsersModule\\UserEvents::USER_DISPLAY_VIEW'), null, user, {id:user.uid}) %}
{% for data in eventData %}
    {{ data }}
{% endfor %}
{{ notifyDisplayHooks(constant('Zikula\\UsersModule\\Container\\HookContainer::HOOK_REGISTRATION_DISPLAY'), user.uid) }}

<fieldset>
    <legend>{{ __('Registration Status') }}</legend>
    <div class="form-group">
        <label class="col-sm-3 control-label">{{ __('Verification expires:') }}</label>
        <div class="col-sm-9">
            <div class="form-control-static">
                {% if isVerified %}
                    {{ __('Never. Registration is verified') }}
                {% elseif verificationSent is empty %}
                    {{ __('Expiration date will be set when the verification e-mail is sent') }}
                {% elseif validUntil is empty %}
                    {{ __('Never') }}
                {% else %}
                    {{ validUntil }}
                {% endif %}
            </div>
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-3 control-label">{{ __('E-mail verification:') }}</label>
        <div class="col-sm-9">
            <div class="form-control-static">
                {% if isVerified is empty or not isVerified %}
                    {% if verificationSent is empty %}
                        <span class="fa fa-times fa-fw fa-red"></span>{{ __('Verification e-mail message not yet sent to the user') }}
                    {% else %}
                        <span class="fa fa-clock-o fa-fw fa-red"></span>{{ __('Not yet verified') }}
                    {% endif %}
                {% else %}
                    <span class="fa fa-check fa-fw fa-green"></span>{{ __('Verification complete') }} <span class="small">{{ __('(or verification was not required when the registration was completed)') }}</span>
                {% endif %}
            </div>
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-3 control-label">{{ __('Administrator approval:') }}</label>
        <div class="col-sm-9">
            <div class="form-control-static">
                {% if user.isapproved is empty or not user.isapproved %}
                    <span class="fa fa-times fa-fw fa-red"></span>{{ __('Not yet approved') }}
                {% else %}
                    <span class="fa fa-check fa-fw fa-green"></span>{{ __('Approved') }} <span class="small">{{ __('(or approval was not required when the registration was completed)') }}</span>
                {% endif %}
            </div>
        </div>
    </div>
</fieldset>
