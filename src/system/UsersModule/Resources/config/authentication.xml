<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="zikula_users_module.internal.authentication_method_collector.class">Zikula\UsersModule\Collector\AuthenticationMethodCollector</parameter>
        <parameter key="zikula_users_module.authentication_method.native_uname.class">Zikula\UsersModule\AuthenticationMethod\NativeUnameAuthenticationMethod</parameter>
        <parameter key="zikula_users_module.form.authentication_method_type.uname_type.class">Zikula\UsersModule\Form\AuthenticationMethodType\UnameType</parameter>
    </parameters>

    <services>
        <service id="zikula_users_module.internal.authentication_method_collector" class="%zikula_users_module.internal.authentication_method_collector.class%" />

        <service id="zikula_users_module.authentication_method.native_uname" class="%zikula_users_module.authentication_method.native_uname.class%">
            <argument type="service" id="zikula_users_module.user_repository" />
            <argument type="service" id="session" />
            <argument type="service" id="translator.default" />
            <tag name="zikula.authentication_method" alias="native.uname" />
        </service>

        <service id="zikula_users_module.form.authentication_method_type.uname_type" class="%zikula_users_module.form.authentication_method_type.uname_type.class%">
            <argument type="service" id="translator.default" />
            <tag alias="Zikula\UsersModule\Form\AuthenticationMethodType\UnameType" name="form.type"/>
        </service>
    </services>
</container>

