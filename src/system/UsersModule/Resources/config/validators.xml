<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="zikulausersmodule.validator.constraints.valid_uname_validator.class">Zikula\UsersModule\Validator\Constraints\ValidUnameValidator</parameter>
        <parameter key="zikulausersmodule.validator.constraints.valid_email_validator.class">Zikula\UsersModule\Validator\Constraints\ValidEmailValidator</parameter>
        <parameter key="zikulausersmodule.validator.constraints.valid_user_fields_validator.class">Zikula\UsersModule\Validator\Constraints\ValidUserFieldsValidator</parameter>
        <parameter key="zikulausersmodule.validator.constraints.valid_password_validator.class">Zikula\UsersModule\Validator\Constraints\ValidPasswordValidator</parameter>
        <parameter key="zikulausersmodule.validator.constraints.valid_anti_spam_answer_validator.class">Zikula\UsersModule\Validator\Constraints\ValidAntiSpamAnswerValidator</parameter>
        <parameter key="zikulausersmodule.validator.constraints.valid_password_reminder_validator.class">Zikula\UsersModule\Validator\Constraints\ValidPasswordReminderValidator</parameter>
    </parameters>

    <services>
        <service id="zikulausersmodule.validator.constraints.valid_uname_validator" class="%zikulausersmodule.validator.constraints.valid_uname_validator.class%">
            <argument type="service" id="zikula_extensions_module.api.variable" />
            <argument type="service" id="translator.default" />
            <argument type="service" id="validator" />
            <tag name="validator.constraint_validator" alias="zikula.uname.validator" />
        </service>
        <service id="zikulausersmodule.validator.constraints.valid_email_validator" class="%zikulausersmodule.validator.constraints.valid_email_validator.class%">
            <argument type="service" id="zikula_extensions_module.api.variable" />
            <argument type="service" id="translator.default" />
            <argument type="service" id="validator" />
            <tag name="validator.constraint_validator" alias="zikula.email.validator" />
        </service>
        <service id="zikulausersmodule.validator.constraints.valid_user_fields_validator" class="%zikulausersmodule.validator.constraints.valid_user_fields_validator.class%">
            <argument type="service" id="zikula_extensions_module.api.variable" />
            <argument type="service" id="translator.default" />
            <argument type="service" id="zikula_users_module.user_repository" />
            <argument type="service" id="zikula_users_module.user_verification_repository" />
            <tag name="validator.constraint_validator" alias="zikula.user_fields.validator" />
        </service>
        <service id="zikulausersmodule.validator.constraints.valid_password_validator" class="%zikulausersmodule.validator.constraints.valid_password_validator.class%">
            <argument type="service" id="zikula_extensions_module.api.variable" />
            <argument type="service" id="translator.default" />
            <argument id="validator" type="service"/>
            <tag name="validator.constraint_validator" alias="zikula.password.validator" />
        </service>
        <service id="zikulausersmodule.validator.constraints.valid_anti_spam_answer_validator" class="%zikulausersmodule.validator.constraints.valid_anti_spam_answer_validator.class%">
            <argument type="service" id="zikula_extensions_module.api.variable" />
            <argument type="service" id="translator.default" />
            <argument id="validator" type="service"/>
            <tag name="validator.constraint_validator" alias="zikula.antispam_answer.validator" />
        </service>
        <service id="zikulausersmodule.validator.constraints.valid_password_reminder_validator" class="%zikulausersmodule.validator.constraints.valid_password_reminder_validator.class%">
            <argument type="service" id="zikula_extensions_module.api.variable" />
            <argument id="validator" type="service"/>
            <tag name="validator.constraint_validator" alias="zikula.password_reminder.validator" />
        </service>
    </services>
</container>

