<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="zikulausersmodule.helper.authentication_method_list_helper.class">Zikula\UsersModule\Helper\AuthenticationMethodListHelper</parameter>
        <parameter key="zikulausersmodule.helper.registration_helper.class">Zikula\UsersModule\Helper\RegistrationHelper</parameter>
        <parameter key="zikulausersmodule.helper.registration_verification_helper.class">Zikula\UsersModule\Helper\RegistrationVerificationHelper</parameter>
        <parameter key="zikulausersmodule.helper.notification_helper.class">Zikula\UsersModule\Helper\NotificationHelper</parameter>
    </parameters>

    <services>

        <service id="zikulausersmodule.helper.authentication_method_list_helper" class="%zikulausersmodule.helper.authentication_method_list_helper.class%">
            <argument type="service" id="monolog.logger" />
            <argument type="service" id="zikula_extensions_module.api.capability" />
            <argument type="service" id="translator.default" />
        </service>
        <service id="zikulausersmodule.helper.registration_helper" class="%zikulausersmodule.helper.registration_helper.class%">
            <argument type="service" id="zikula_extensions_module.api.variable" />
            <argument type="service" id="session" />
            <argument type="service" id="zikula_permissions_module.api.permission" />
            <argument type="service" id="zikula_users_module.user_repository" />
            <argument type="service" id="zikula_users_module.user_verification_repository" />
            <argument type="service" id="event_dispatcher" />
            <argument type="service" id="translator.default" />
            <argument type="service" id="zikulausersmodule.helper.registration_verification_helper" />
            <argument type="service" id="zikulausersmodule.helper.notification_helper" />
        </service>
        <service id="zikulausersmodule.helper.registration_verification_helper" class="%zikulausersmodule.helper.registration_verification_helper.class%">
            <argument type="service" id="zikula_extensions_module.api.variable" />
            <argument type="service" id="session" />
            <argument type="service" id="zikula_permissions_module.api.permission" />
            <argument type="service" id="zikula_users_module.user_verification_repository" />
            <argument type="service" id="translator.default" />
        </service>
        <service id="zikulausersmodule.helper.notification_helper" class="%zikulausersmodule.helper.notification_helper.class%">
            <argument type="service" id="translator.default" />
            <argument type="service" id="twig" />
            <argument type="service" id="zikula_extensions_module.api.variable" />
        </service>

    </services>
</container>

