{% form_theme form with [
    '@ZikulaFormExtension/Form/bootstrap_4_zikula_admin_layout.html.twig',
    '@ZikulaFormExtension/Form/form_div_layout.html.twig'
] %}
{{ adminHeader() }}
<h3>
    <span class="fas fa-trash-alt"></span>
    {% trans %}Uninstall module{% endtrans %} '{{ extension.displayname }}'
    {{ pageSetVar('title', 'Uninstall module'|trans) }}
</h3>

<p class="alert alert-warning">{% trans with {'%title%': extension.displayname} %}Do you really want to uninstall '%title%'?{% endtrans %}</p>
<p class="alert alert-danger">{% trans %}Warning! Uninstalling this module will also permanently remove all data associated with it, including all data held by other modules that are hooked to this module.{% endtrans %}</p>
{% if blocks|length > 0 %}
    <div class="alert alert-danger">
        {% trans %}Warning! Removing this module will also remove the following blocks{% endtrans %}:
        <ul>
            {% for block in blocks %}
            <li>{{ block.blocktype }} : {{ block.title|default(block.description) }}</li>
            {% endfor %}
        </ul>
    </div>
{% endif %}
{% if requiredDependents|length > 0 %}
    <div class="alert alert-danger">
        {% trans %}Warning! Other modules present in the system require this module. If you uninstall this module then these modules that require it will also be uninstalled.{% endtrans %}
        <ul>
            {% for dependent in requiredDependents %}
            <li>{{ dependent.displayname }}</li>
            {% endfor %}
        </ul>
    </div>
{% endif %}

{{ form_start(form) }}
{{ form_errors(form) }}
<div class="form-group row">
    <div class="col-md-9 offset-md-3">
        {{ form_widget(form.delete) }}
        {{ form_widget(form.cancel) }}
    </div>
</div>
{{ form_end(form) }}
{{ adminFooter() }}
