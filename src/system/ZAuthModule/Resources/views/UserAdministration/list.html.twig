{{ pageAddAsset('javascript', zasset('@ZikulaUsersModule:js/Zikula.Users.Admin.View.js')) }}
{{ adminHeader() }}
<h3>
    <span class="fa fa-list"></span>
    {{ __('Users list') }}
    {{ pageSetVar('title', __('Users list')) }}
</h3>

<div id="user-search-container" class="form hide">
    <div class="input-group">
        <input placeholder="{{ __('Search') }}" id="user-search" class="form-control" size="25" maxlength="25" type="text" data-route="zikulazauthmodule_useradministration_getusersbyfragmentastable" value="" />
        <span class="input-group-addon"><i class="fa fa-times pointer" id="user-search-discard"></i></span>
    </div>
</div>
<div id="user-search-min-char" class="hide">{{ __('Please enter at least 3 characters') }}</div>

<p id="users-alphafilter">
    {{ pagerabc({posvar:'letter', forwardvars:'sortby', printempty:true, route:'zikulazauthmodule_useradministration_list'}) }}
</p>

<div id="user-list">
    <table id="user-table" class="table table-bordered table-striped">
        <colgroup>
            <col id="cUser" />
            <col id="cEmail" />
            <col id="cVerified" />
            <col id="cId" />
            <col id="cMethod" />
            <col id="cActions" />
        </colgroup>
        <thead>
            <tr>
                <th id="hUser" scope="col"><a class='{{ sort.uname.class }}' href='{{ sort.uname.url }}'>{{ __('User name') }}</a></th>
                <th id="hEmail" scope="col">{{ __('Email') }}</th>
                <th id="hVerified" scope="col">{{ __('Email verified') }}</th>
                <th id="hId" scope="col"><a class='{{ sort.uid.class }}' href='{{ sort.uid.url }}'>{{ __('Internal ID') }}</a></th>
                <th id="hMethod" scope="col">{{ __('Method') }}</th>
                <th id="hActions" scope="col">{{ __('Actions') }}</th>
            </tr>
        </thead>
        <tbody>
            {{ include('@ZikulaZAuthModule/UserAdministration/userlist.html.twig') }}
        </tbody>
    </table>
    {{ pager({rowcount:pager.count, limit:pager.limit, route:'zikulazauthmodule_useradministration_list', posvar:'startnum'}) }}
</div>

{# This table is for ajax search results and is hidden until needed and populated then with the results. #}
<table id="user-search-list" class="table table-bordered table-striped hide">
    <colgroup>
        <col id="cSearchUser" />
        <col id="cSearchEmail" />
        <col id="cSearchVerified" />
        <col id="cSearchId" />
        <col id="cSearchMethod" />
        <col id="cSearchActions" />
    </colgroup>
    <thead>
    <tr>
        <th headers="hSearchUser"><a class='{{ sort.uname.class }}' href='{{ sort.uname.url }}'>{{ __('User name') }}</a></th>
        <th headers="hSearchEmail">{{ __('Email') }}</th>
        <th headers="hSearchVerified">{{ __('Email verified') }}</th>
        <th headers="hSearchId"><a class='{{ sort.uid.class }}' href='{{ sort.uid.url }}'>{{ __('Internal ID') }}</a></th>
        <th headers="hSearchMethod">{{ __('Method') }}</th>
        <th headers="hSearchActions">{{ __('Actions') }}</th>
    </tr>
    </thead>
    <tbody>
    </tbody>
</table>
{{ adminFooter() }}
