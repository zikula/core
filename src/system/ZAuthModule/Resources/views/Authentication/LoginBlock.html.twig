{% form_theme form with [
    '@ZikulaFormExtension/Form/bootstrap_4_zikula_admin_layout.html.twig',
    '@ZikulaFormExtension/Form/form_div_layout.html.twig'
] %}
<fieldset>
    {{ loginHeader|raw }}
    {{ form_start(form) }}
    {{ form_errors(form) }}
    <p>{{ form_widget(attribute(form, loginField|default('uname'))) }}</p>
    <p>{{ form_widget(form.pass) }}</p>
    <p>{{ form_widget(form.rememberme) }} {{ __('Remember me') }}</p>
    {{ form_row(form.submit) }}
    {{ form_end(form) }}
    {{ loginFooter|raw }}
</fieldset>
