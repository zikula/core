{% form_theme form with [
    '@ZikulaFormExtension/Form/bootstrap_4_zikula_admin_layout.html.twig',
    '@ZikulaFormExtension/Form/form_div_layout.html.twig'
] %}
{{ moduleHeader('user', __('Account information recovery'), '', true, true) }}

<p class="alert alert-info">{{ __('Please complete the form below to reset your password.') }}</p>

<fieldset>
    {{ form_start(form) }}
    {{ form_errors(form) }}
    <div class="alert alert-info">{{ __('Create a new password.') }}</div>
    {{ form_row(form.pass) }}
    {{ form_end(form) }}
</fieldset>
