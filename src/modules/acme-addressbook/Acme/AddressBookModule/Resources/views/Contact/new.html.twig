{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Create Contact</h1>

    {% include 'AcmeAddressBookModule:Default:flash.html.twig' with {'scope': 'contacts'} %}

    {% form_theme form 'AcmeAddressBookModule:Contact:contact-form.html.twig' %}
    {{ form(form, {'form_type': 'horizontal'}) }}

    <ul class="inline">
        <li><a href="{{ path('contacts') }}" class="btn"><i class="icon-list"></i> Back to the list</a></li>
    </ul>
{% endblock %}

{% block javascripts %}
    {% javascripts '@AcmeAddressBookModule/Resources/assets/js/contact-form.js' %}
    <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}
