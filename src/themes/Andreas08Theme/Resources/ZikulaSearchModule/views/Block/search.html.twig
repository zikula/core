{% set searchText = __('Search keywords') %}
<form id="theme_search" class="pull-right" method="post" action="{{ path('zikulasearchmodule_user_search') }}">
    <div>
        <input id="block_search_q" type="search" name="q" size="20" maxlength="255" class="theme_search_input" onfocus="if (this.value == '{{ searchText|e('js') }}') this.value = ''" value="{{ searchText|e('html_attr') }}" />
        {% if properties.displaySearchBtn == 1 %}
            <input class="theme_search_button" type="submit" value="{{ __('Go') }}" />
        {% endif %}
        <div class="hidden">
            {% for plugin, pluginOption in pluginOptions %}
                {{ pluginOption }}
            {% endfor %}
        </div>
        {% set moduleVariables = zikulasearchmodule_searchVarToFieldNames() %}
        {% for name, value in moduleVariables %}
            <input type="hidden" name="{{ name|e('html_attr') }}" value="{{ value|e('html_attr') }}" />
        {% endfor %}
    </div>
</form>
